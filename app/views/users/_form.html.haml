= form_for(@user, remote: true, :html => { :role => "form" }) do |f|
  .row
    .col-sm-6
      .form-group
        = f.label :name, :class => "control-label"
        = f.text_field :name, :class => "form-control first_input"
      .form-group
        = f.label :email, :class => "control-label"
        = f.text_field :email, :class => "form-control"
      .form-group
        = f.label :title, :class => "control-label"
        = f.text_field :title, :class => "form-control"
      .form-group
        = f.label :phone, :class => "control-label"
        = f.text_field :phone, :class => "form-control"
    .col-sm-6
      .form-group
        = f.label :status, :class => "control-label"
        = f.select :status, User.statuses.keys.to_a, :class => "form-control"
      .form-group
        = f.submit  @user.new_record? ? "Create Create" : "Update User", :class => "btn btn-primary submit-user"
