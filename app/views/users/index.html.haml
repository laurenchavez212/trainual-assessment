%p#notice= notice
%h1 Users
= paginate @users, window: 2

= form_tag(users_path, method: :get) do
  Search by name #{text_field_tag :name, params[:name]}
  \#{submit_tag 'Search', name: nil}

%table
  %thead
    %tr
      %th= sortable "updated_at", 'Last Updated'
      %th= sortable "name"
      %th= sortable "email"
      %th= sortable "title"
      %th= sortable "phone"
      %th= sortable "status"
      %th{:colspan => "3"}
  %tbody
  - @users.each do |user|
    %tr
      %td= user.updated_at
      %td= user.name
      %td= user.email
      %td= user.title
      %td= user.phone
      %td= user.status
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New User', new_user_path
